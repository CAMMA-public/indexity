{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceRoot": "./src",
    "allowJs": true,
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
